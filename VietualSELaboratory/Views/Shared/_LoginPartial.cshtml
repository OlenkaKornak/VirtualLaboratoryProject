@using Microsoft.AspNetCore.Identity
@using Domain.RDBMS.Entities

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Task", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark"><i id="logout_icon" class="fas fa-arrow-left" style="font-size:15px;color:#334D6E; margin-right: 5px;"></i>Logout</button>
            </form>
        </li>
}
</ul>
